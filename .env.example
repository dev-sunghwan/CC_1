# Face Recognition System - Environment Configuration

# RTSP Stream Configuration
RTSP_URL=rtsp://192.168.1.100:554/profile2/media.smp
RTSP_RECONNECT_ATTEMPTS=10
RTSP_TIMEOUT=5

# Detection Configuration
DETECTION_INTERVAL=1
DETECTION_THRESHOLD=0.5
DETECTION_SIZE=640

# Recognition Configuration
RECOGNITION_THRESHOLD=0.4
EMBEDDING_MODEL=buffalo_l

# Tracking Configuration
TRACK_THRESHOLD=0.6
MATCH_THRESHOLD=0.8
MAX_TIME_LOST=30

# Display Configuration
DISPLAY_ENABLED=true
DISPLAY_FPS=true
DISPLAY_LANDMARKS=false

# Video Recording
SAVE_VIDEO=false
OUTPUT_PATH=./output/output.mp4
SNAPSHOT_DIR=./output/snapshots

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/face_recognition.log

# Performance
NUM_THREADS=8
QUEUE_SIZE=10

# Database (future use)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=facedb
# DB_USER=faceuser
# DB_PASSWORD=facepass

# X11 Display (for Docker)
DISPLAY=:0
